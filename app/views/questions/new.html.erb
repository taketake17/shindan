<%= form_with url: questions_path, local: true, method: :post, class: "max-w-4xl mx-auto px-4 py-8" do |f| %>
  <div class="space-y-12">
    <% @questions.each_with_index do |question, index| %>
      <div class="bg-gradient-to-r from-purple-100 to-pink-100 shadow-lg rounded-xl p-8 transform hover:scale-105 transition duration-300">
        <h3 class="text-2xl font-bold mb-6 text-indigo-800">
          <%= question['text'] %>
        </h3>
        <div class="space-y-6">
          <% question['options'].each do |option| %>
            <div class="flex items-center bg-white rounded-lg p-4 hover:bg-indigo-50 transition duration-200">
              <%= f.radio_button "answers[#{question['id']}]", 
                                 option['value'], 
                                 id: "question_#{question['id']}_option_#{option['value']}",
                                 checked: @answers&.find { |a| a.question_id.to_s == question['id'].to_s }&.selected_value.to_s == option['value'].to_s,
                                 class: "mr-4 h-6 w-6 text-indigo-600 focus:ring-indigo-500" %>
              <label for="question_<%= question['id'] %>_option_<%= option['value'] %>" class="text-xl text-gray-700 cursor-pointer flex-grow">
                <%= option['label'] %>
              </label>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="mt-12 text-center">
    <%= f.submit "結果を見る！", class: "bg-gradient-to-r from-purple-500 to-pink-500 hover:from-purple-600 hover:to-pink-600 text-white font-bold py-4 px-8 rounded-full text-xl shadow-lg transform hover:scale-105 transition duration-300 ease-in-out" %>
  </div>
<% end %>




